
<%= form_tag jobs_path, :method => 'get',class: "navbar-form" do%>
	<div class="input-group">
		<%=text_field_tag :q, nil, placeholder: "Search Jobs", class: 'form-control'%>
		<span class="input-group-btn">
			<%= button_tag(type: 'submit', class: 'btn btn-default') do %>
  			<span
    			class="glyphicon glyphicon-search">
  			</span>
  			<%end%>
  		</span>
	</div>  
<%end%>

<%if @jobs.any?%>
	<% i = 1%>
	<%@jobs.each do |job|%>
		<% user= job.user%>
		<div class="col-sm-3">
		<h3><%=i%>. <a href="/jobs/<%= job.id %>"><%=job.name%></a></h3>
		<label>Price: </label><%= job.pay_offer%><br>
			<% if job.bids.count != 0 %>
				<label>Bids: </label><%= job.bids.count %>
			<% else %>
				<label>No Bids Yet</label>
			<% end %>

			<% if current_user.id == user.id %>
				<%= link_to "Edit", edit_job_path(job), class: "btn btn-default" %>
				<%= link_to job_path(job), method: :delete, class: "btn btn-default" do %>
			    <i class="glyphicon glyphicon-remove"></i>
				<% end %>
			<% else %>
				<% if job.bids.where(user_id: current_user.id) == 0 %>
					<%= link_to 'New Bid', new_job_bid_path(job), class: "btn btn-default" %>
				<% else %>
					<% job.bids.each do |bid| %>
						<%= link_to 'Edit Bid', edit_bid_path(bid), class: "btn btn-default" %>
					<% end %>
				<% end %>
			<% end %>
		</div>
		<% i = i+1%>
	<%end%>
<%else%>
	<label>No jobs yet</label>
<%end%>