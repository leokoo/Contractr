<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item">
        <%= link_to "Edit Profile", edit_user_registration_path, class: "sidebar-link active" %>
      </li>
    </ul>
    <br>
    <%= link_to "View My Profile", user_path(current_user.id), class: "btn btn-default wide" %>
  </div>
  <div class="col-md-9 text-center">
    <div class="panel panel-default">
      <div class="panel-heading">Your Profile</div>
        <div class="panel-body">
          <div class="container">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render 'shared/devisemes' %>


              <div class="form-group">
                <%= f.text_field :fullname, autofocus: true, :placeholder => "Full Name", :class => "form-control" %>
              </div>

              Skill List
              <% @skills.first(5).each do |userskill| %>
                  <%= check_box_tag "user_skills[#{userskill.skill}]", "#{userskill.skill}", current_user.has_skill?(userskill.skill) %><%= userskill.skill %><br>
              <%end%>

              <div class="form-group">
                <%= f.text_field :phone_number, autofocus: true, :placeholder => "Phone Number", :class => "form-control" %>
              </div>  

              <div class="form-group">
                <%= f.text_area :description, rows: 5, cols: 25, autofocus: true, :placeholder => "Description", :class => "form-control" %>
              </div>

              <div class="form-group">
                <%= f.text_field :email, autofocus: true, :placeholder => "Email", :class => "form-control" %>
              </div>

              <div class="form-group">
                <%= f.text_field :languages, autofocus: true, :placeholder => "Languages", :class => "form-control" %>
              </div>

              <div class="form-group">
                <%= f.text_field :rate, autofocus: true, :placeholder => "Rate USD$/hour", :class => "form-control" %>
              </div>

              <div class="form-group">
                <%= f.text_field :twitter, autofocus: true, :placeholder => "Twitter", :class => "form-control" %>
              </div>

              <div class="form-group">
                <%= f.text_field :facebook, autofocus: true, :placeholder => "Facebook", :class => "form-control" %>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="form-group">
                <%= f.password_field :password, autocomplete: "off", :placeholder => "New Password (leave blank if you don't want to change it", :class => "form-control" %>
              </div>

              <div class="form-group">
                <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirm Password", :class => "form-control" %>
              </div>

              <div class="actions">
                <%= f.submit "Save", :class => "btn btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
    </div>

    
    <%= link_to "Back", :back %>
  </div>
</div>
