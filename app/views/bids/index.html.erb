<p id="notice"><%= notice %></p>

<h1>Listing Bids</h1>

<div class="project-intro">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="table-responsive">
          <%= render 'bids/table', bids: @bids %>
        </div>
      </div>
    </div>  
  </div>  
</div>

<table>
  <thead>
    <tr>
      <th>Bid value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% i = 1 %>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= i %>) <%= bid.job.name %></td>
        <td>|  <%= bid.user.fullname %></td>
        <td>|  <%= bid.bid_value %></td>
        <td>|  <%= link_to 'Show', bid %></td>
        <% if bid.user.id == current_user.id && bid.job.job_status == 0 %>
          <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
          <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% i += 1 %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bid', new_job_bid_path %>
